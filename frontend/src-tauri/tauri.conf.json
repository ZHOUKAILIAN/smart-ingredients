{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Smart Ingredients",
  "version": "0.1.0",
  "identifier": "com.smart-ingredients.app",
  "build": {
    "beforeDevCommand": "cd \"$(git rev-parse --show-toplevel)\" && trunk serve --config Trunk.toml",
    "beforeBuildCommand": "cd \"$(git rev-parse --show-toplevel)\" && ./scripts/update-android-network-config.sh && rm -rf frontend/dist_tmp && trunk build --config Trunk.toml --dist frontend/dist_tmp",
    "frontendDist": "../dist_tmp",
    "devUrl": "http://localhost:8080"
  },
  "app": {
    "windows": [
      {
        "title": "Smart Ingredients",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png"]
  }
}
